<phpunit bootstrap="./tests/phpunit.php">

    <testsuite name="unit">
        <directory>./tests</directory>
    </testsuite>

    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>

</phpunit>